{{#partial "content"}}
    <a href="/teams/{{foundTeam.teamId}}/members/new"><h1>Add New Member</h1></a>
    <hr>
    <h1>Edit Members</h1>
        <form action='/teams/{{foundTeam.teamId}}/members/edit' method="post">
        {{#each allMembers}}
            <div class="form-group">
                <label for="first-name">First name</label>
                <input id="first-name" name="first-name" class="form-control" type="text" value="{{firstName}}">
            </div>
            <div class="form-group">
                <label for="last-name">Last name</label>
                <input id="last-name" name="last-name" class="form-control" type="text" value="{{lastName}}">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" name="email" class="form-control" type="text" value="{{email}}">
            </div>
            <div class="form-group">
                <label for="favorite-color">Favorite Color</label>
                <input id="favorite-color" name="favorite-color" class="form-control" type="text" value="{{favoriteColor}}">
            </div>
            <div class="form-group">
                <label for="skills">Skills</label>
                <input id="skills" name="skills" class="form-control" type="text" value="{{skills}}">
            </div>
            <hr>
        {{/each}}
        </form>
        {{#each allMembers}}
            Name: {{firstName}} {{lastName}}
            <form action="/teams/{{foundTeam.teamId}}/members/{{memberId}}/delete" method="post">
                <br><button type="submit" class="btn">Remove</button>
            </form>
            <hr>
        {{/each}}
        <a href="/teams/display/"><h1>Finish Editing</h1></a>
        <hr>
{{/partial}}

{{> layout.hbs}}